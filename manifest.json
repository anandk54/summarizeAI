{
    "manifest_version": 3,
    "name": "SummarizeAI",
    "version": "1.0",
    "description": "AI-powered text summarization extension using BART",
    "permissions": [
      "contextMenus",
      "storage",
      "scripting",
      "activeTab",
      "commands"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "src/js/background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/js/content.js"],
        "css": ["src/css/content.css"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "action": {
      "default_popup": "src/popup.html",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "options_page": "src/settings.html",
    "commands": {
      "summarize-selection": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
        },
        "description": "Summarize selected text"
      }
    }
}
  